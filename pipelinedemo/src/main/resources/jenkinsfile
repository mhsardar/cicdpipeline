pipeline {
  agent any
			  stages {
			    stage('Unit Test') {
			      steps {
			        sh 'mvn clean test'
			      }
			    }
			    
			 
			  
			  stage('Deploy ARM') {
			      environment {
			        ANYPOINT_CREDENTIALS = credentials('deploy-anypoint-user')
			      }
			      steps {
			        sh 'mvn deploy -P arm -Darm.target.name=local-4.2.2-ee -Danypoint.username=${ANYPOINT_CREDENTIALS_USR}  -Danypoint.password=${ANYPOINT_CREDENTIALS_PSW}'
			      }
    			}
   
 }